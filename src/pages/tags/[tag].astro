---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Body from '../../components/Body.astro';
import Content from '../../components/Content.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import FormattedDate from '../../components/FormattedDate.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );
  const uniqueTags = [...new Set(posts.map((post) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = posts.filter((post) => post.data.tags?.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<Body>
		<Header />
		<main class="pt-[64px]">
      <Content className="mb-6">
        <section>
          <div class="flex items-center gap-2">
            <h2 class="text-3xl font-semibold">
              Posts with 
            </h2>
            <span class="px-2 rounded-md text-lg font-mplus bg-orange-300 dark:bg-zinc-600">
              <code>#{tag}</code>
            </span>
          </div>
          <hr class="border-top border-zinc-400 my-4"/>
          <ul class="grid grid-cols-1">
            {
              posts.map((blog: any) => (
                <li class="relative flex gap-6 text-left pb-4">
                  <div class="before:absolute before:left-[5.5px] before:top-[5px] before:h-full before:w-0.5 before:bg-orange-300 before:dark:bg-zinc-600">
                    <svg xmlns="http://www.w3.org/2000/svg" width="12" height="20" class="bi bi-circle-fill fill-orange-300 dark:fill-zinc-600" viewBox="0 0 30 30">
                      <circle cx="15" cy="15" r="15" />
                    </svg>
                  </div>
                  <div class="flex flex-col">
                    <FormattedDate className="text-sm opacity-70 mb-2" date={blog.data.pubDate} />
                    <a href=`/blog/${blog.slug}`>
                      <div class="flex flex-row gap-4">
                        <div>
                          <div class="mb-1 text-xl hover:text-orange-600 dark:hover:text-orange-300">{blog.data.title}</div>
                        </div>
                      </div>
                    </a>
                    <div class="mb-1 text-lg flex gap-2">{
                      blog.data.tags.map((tag: string) => (
                        <a href=`/tags/${tag}`>
                          <div class="px-2 py-1 rounded-md font-mplus text-sm bg-orange-300 dark:bg-zinc-600"><code>#{tag}</code></div>
                        </a>
                      ))
                    }</div>
                  </div>
                </li>
              ))
            }
          </ul>
        </section>
      </Content>
		</main>
		<Footer />
	</Body>
</html>
