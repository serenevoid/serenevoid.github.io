<div class="justify-center relative">
  <button type="button" class="space-y-1 rounded-md border border-zinc-400 dark:border-zinc-700 p-2 text-sm font-medium shadow-sm hover:bg-orange-200 dark:hover:bg-zinc-800 outline-none transition-all" id="menu-button" aria-expanded="true" aria-haspopup="true">
    <div class="w-4 h-0.5 bg-zinc-900 dark:bg-zinc-300"></div>
    <div class="w-4 h-0.5 bg-zinc-900 dark:bg-zinc-300"></div>
    <div class="w-4 h-0.5 bg-zinc-900 dark:bg-zinc-300"></div>
  </button>
  <div id="dropdown-menu" class="absolute right-0 z-10 my-2 w-40 bottom-full sm:bottom-auto rounded-md border border-zinc-400 dark:border-zinc-700 bg-orange-50 dark:bg-zinc-900 shadow-lg transition-all opacity-0 translate-y-[10px] sm:translate-y-[-10px] duration-100 ease-in-out pointer-events-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
    <div class="flex flex-col justify-center" role="none">
      <a href="/games" class="px-3 py-2 text-sm rounded-t-md hover:bg-orange-200 dark:hover:bg-zinc-700" role="menuitem" tabindex="-1" id="menu-item-0">Games</a>
      <a href="/projects" class="px-3 py-2 text-sm hover:bg-orange-200 dark:hover:bg-zinc-700" role="menuitem" tabindex="-1" id="menu-item-0">Projects</a>
      <a href="/blog" class="px-3 py-2 text-sm hover:bg-orange-200 dark:hover:bg-zinc-700" role="menuitem" tabindex="-1" id="menu-item-1">Blog</a>
      <a href="/about" class="px-3 py-2 text-sm rounded-b-md hover:bg-orange-200 dark:hover:bg-zinc-700" role="menuitem" tabindex="-1" id="menu-item-2">About</a>
    </div>
  </div>
</div>
<script is:inline>
const button = document.getElementById("menu-button");
const menu = document.getElementById("dropdown-menu");
button.onclick = toggleMenu;
function toggleMenu() {
  (menu.classList.contains("opacity-0"))
    ? showDropdown()
    : hideDropdown();
}
function showDropdown() {
  menu.classList.remove("opacity-0");
  menu.classList.remove("translate-y-[10px]");
  menu.classList.remove("sm:translate-y-[-10px]");
  menu.classList.remove("pointer-events-none");
}
function hideDropdown() {
  menu.classList.add("opacity-0");
  menu.classList.add("translate-y-[10px]");
  menu.classList.add("sm:translate-y-[-10px]");
  menu.classList.add("pointer-events-none");
}
</script>
